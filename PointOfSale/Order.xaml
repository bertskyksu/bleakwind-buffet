<UserControl x:Class="PointOfSale.Order"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Button Click ="SwitchToMenuSelection" Name="menuSelectButton" Height="50" Margin="10" >
                Main Menu Selection
            </Button>
            
            <!--Button Click ="SwitchToPaymentSelection" Name="paymentSelectButton" Height="50" Margin="10" >
                Payment Selection
            </-->
             
            <ListView Name ="FinalOrderListView" Height="400" />
        </StackPanel>
        
        <Border x:Name="switchBorder" Grid.Column="0">
            <local:MenuSelectionScreen/>

            <!-- only one child allowed?-->
            
        </Border>
    </Grid>

</UserControl>
