<UserControl x:Class="PointOfSale.Entrees.DoubleDraugrCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <CheckBox Name="Bun" IsChecked="True">
                Bun
            </CheckBox>
            <CheckBox Name="Ketchup" IsChecked="True">
                Ketchup
            </CheckBox>
            <CheckBox Name="Mustard" IsChecked="True">
                Mustard
            </CheckBox>
            <CheckBox Name="Pickle" IsChecked="True">
                Pickle
            </CheckBox>
            <CheckBox Name="Cheese" IsChecked="True">
                Cheese
            </CheckBox>
            <CheckBox Name="Tomato" IsChecked="True">
                Tomato
            </CheckBox>
            <CheckBox Name="Lettuce" IsChecked="True">
                Lettuce
            </CheckBox>
            <CheckBox Name="Mayo" IsChecked="True">
                Mayo
            </CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
